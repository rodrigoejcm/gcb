
<h1>Locais Cadastrados</h1>

<%= link_to new_local_path, class: 'btn btn-success' do %>
  <i class="fa fa-plus"></i> Cadastrar Novo Local
<% end %>

<%= link_to turmas_path, class: 'btn btn-danger' do %>
  <i class="fa fa-users"></i> Minhas Turmas
<% end %>

<p id="notice"><%= notice %></p>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Local</th>
      <th></th>
      <th class="text-center">Contatos</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locais.each do |local| %>
      <tr>
        <td><%=image_tag local.imagem_url.to_s, size: '70'%></td>
        <td>
           <%=local.nome%><br>
           <%=local.endereco%><br>
           <%=local.cidade%><br>
           <%=local.estadoprovincia%> - <%=local.pais%>
        </td>
        <td class="text-center">
           <%=local.contato1%><br>
           <%=local.contato2%><br>
        </td>
        <td>
          
          <%= link_to(local) do %>
            <i class="fa fa-calendar-o"></i> Visualizar
          <% end %>
          <br>
          <%= link_to(edit_local_path(local)) do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
          <br>
          <%= link_to(local, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este local?' }) do %>
            <i class="fa fa-trash-o"></i> Excluir
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @locais %>

<br>

