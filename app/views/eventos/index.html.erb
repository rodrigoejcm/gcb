<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Eventos</th>
      <th style="width: 250px;"></th>
      <th>Local/Hor√°rio</th>
      <th>Evento Aprovado?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td>
          <%=image_tag evento.image_url.to_s, size: '100'%>
        </td>
        <td>
          <br>
          <b><%= evento.titulo %></b>
          <br>
          <%= strip_tags(evento.descricao).truncate(50) %>
          
        </td>
        <td>
          <br>
          <%= evento.local %>
          <br>
          <i class="fa fa-calendar hidden-xs"></i> <%= evento.data_hora_inicio.to_time.strftime('%d/%m/%Y')%>
          <br>
          <i class="fa fa-clock-o hidden-xs"></i> <%= evento.data_hora_inicio.to_time.strftime('%H:%m ')%>
        </td>
        
 
        <td>
          <br>
          <span class="label <%=evento.status_aprovacao_cor%>">
            <%= evento.status_aprovacao%>
          </span>
        </td>
        <td>
          <br>
          <%= link_to(evento) do %>
            <i class="fa fa-calendar-o"></i> Visualizar Evento
          <% end %>
          <br>
          <%= link_to(publico_evento_path(evento)) do %>
            <i class="fa fa-eye"></i> Preview Evento
          <% end %>
          <br>
          <%= link_to(edit_evento_path(evento)) do %>
            <i class="fa fa-pencil"></i> Editar Evento
          <% end %>
          <br>
          <%= link_to(evento, method: :delete, data: { confirm: 'Tem certeza que deseja excluir o evento?' }) do %>
            <i class="fa fa-trash-o"></i> Excluir Evento
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @eventos %>

