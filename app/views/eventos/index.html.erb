<p id="notice"><%= notice %></p>

<% if current_usuario.admin? || current_usuario.mestre?  %>

  <h1>Eventos Cadastrados</h1>

<%else %>

  <h1>Meus Eventos</h1>  

<% end %>



<p>Pode excluir evento? <%=podeCadastrarNovoEventoOuExcluirOuEditar['excluir']%> </p>
<p>Pode excluir evento? <%=podeCadastrarNovoEventoOuExcluirOuEditar['excluir']['pode']%> </p>

<p>Pode cadastrar evento? <%=podeCadastrarNovoEventoOuExcluirOuEditar['cadastrar']%> </p>
<p>Pode cadastrar editar? <%=podeCadastrarNovoEventoOuExcluirOuEditar['editar']%> </p>
<p>Resumo do usuario: <%=podeCadastrarNovoEventoOuExcluirOuEditar['resumo_usuario_eventos']%> </p>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Descrição Evento</th>
      <th>Incio</th>
      <th>Fim</th>
      <th>Evento Aprovado?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%=image_tag evento.image_url.to_s, size: '100'%></td>
        <td>
          <b><%= evento.titulo %></b>
          <%= evento.descricao.truncate(100) %>
          Local: <%= evento.local %>
        <td>
          <%= evento.data_hora_inicio.to_time.strftime('%d/%m/%Y')%>
          <br>
          <%= evento.data_hora_inicio.to_time.strftime('%H:%m ')%>
        </td>
        <td>
          <%= evento.data_hora_fim.to_time.strftime('%d/%m/%Y')%>
          <br>
          <%= evento.data_hora_fim.to_time.strftime('%H:%m ')%>
        </td>
 
        <td>
          <%= evento.status_aprovacao%>
        </td>
        <td><%= link_to 'Visualizar', evento, class: 'btn btn-primary btn-xs' %><br>
        <%= link_to 'Editar Evento', edit_evento_path(evento) , class: 'btn btn-info btn-xs'%><br>
        <%= link_to 'Cancelar Evento', evento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @eventos %>

<br>

<%= link_to new_evento_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Cadastrar Novo Evento
<% end %>


