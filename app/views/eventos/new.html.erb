
<div class="row">
	<div class="col-md-8 col-offset-2">
		<h1>Cadastrar Novo Evento</h1>

		<%= form_for(@evento) do |f| %>

			<%= render 'form', evento: @evento, f:f %>
			
			<div class="actions">
