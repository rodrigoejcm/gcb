


<section id="events">
	<div class="container">

				<div class="row">
					
					<div class="col-md-9">
						<h3>Pr√≥ximos Eventos / </span>
						<%if @texto_filtro %>
						<span class="size-16"> <%= @texto_filtro %> </span>
						<% end %>	
						</h3>

						 <% @eventos.each do |evento| %>
							<div class="row">

							<!-- DIV Eventos -->
							<%= link_to (publico_evento_path(evento)) do%>
								<div class="col-md-4 col-sm-4">
									<figure class="margin-bottom-20">
										<div class="cartaz-evento" style="background-image: url('<%=evento.image_url.to_s%>');">
										</div>
									</figure>
								</div>
								<div class="col-md-8 col-sm-8">
									<div class="event-item event-item-eventos ">
										
										<div class="event-date-wrapper">
											<span class="event-date-day"><%= evento.data_hora_inicio.to_time.strftime('%d')%></span>
											<span class="event-date-month uppercase"><%=l evento.data_hora_inicio.to_date, format: :mesabrv%></span>
		
										</div>
										<div class="event-content-wrapper">
											<div class="event-content-inner-wrapper">
												<h3 class="event-title"><a href="<%= publico_evento_path(evento) %>"><%= evento.titulo %></a></h3>
												<div class="event-location"><%= evento.usuario.apelidoCompleto %> </div>
					                            <div class="event-location"><%= evento.nome_pais %> - <%= evento.cidade %> </div>
					                        
											</div>
										
											<div 	class="fb-share-button" 
													data-href="<%=request.original_url%>" 
													data-layout="button" 
													data-mobile-iframe="true">
													<a 
														class="fb-xfbml-parse-ignore" 
														target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">
														Compartilhar
													</a>
											</div>
					                       
					                    </div>
										
							
									</div>
								</div>
							<% end %>
							</div>
						<br>
						<% end %>

						<%= will_paginate @eventos %>
					</div>
					<div class="col-md-3 col-sm-3"">
						<div class="side-nav margin-bottom-60 margin-top-30">
							<%= render 'sidebar_evento', locais:@resultLocais, datas:@resultDatas, professores:@resultProfs%>
							<hr>
							 <%= render 'layouts/sidebar_fb' %>	
						</div>
					</div>
				</div>	
	</div>
        
</section>