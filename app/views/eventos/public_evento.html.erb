
<section id="events">
	<div class="container">

			<div class="row">
					
			<div class="col-md-9">

				<h3>Eventos /<span class="size-18"> <%= @evento.titulo %> </span></h3>

				 <div class="row">

					<!-- DIV Eventos -->
						
							<figure class="margin-bottom-20">
								<%=image_tag @evento.image_url.to_s , class: "img-responsive"%>
							</figure>
						
						
							<div class="event-item">
								
								<div class="event-date-wrapper">
									<span class="event-date-day"><%= @evento.data_hora_inicio.to_time.strftime('%d')%></span>
									<span class="event-date-month"><%= @evento.data_hora_inicio.to_time.strftime('%^b')%></span>
								</div>
								<div class="event-content-wrapper">
									<div class="event-content-inner-wrapper">
										<h3 class="event-title"><%= @evento.titulo %></h3>
										<div class="event-location"><%= @evento.usuario.graduacao %> - <%= @evento.usuario.nome %> </div>
			                            <div class="event-location"><%= @evento.local %> </div>
			                            <div class="event-location">
			                            	<%= @evento.data_hora_inicio.to_time.strftime('%H:%M') %> - <%= @evento.data_hora_fim.to_time.strftime('%H:%M') %>  
			                            </div>
			                            <hr>
			                            <div class="event-location"><%= @evento.descricao.html_safe %> </div>
									</div>
			                       
			                    </div>
							</div>
						
					</div>

			</div>
			<div class="col-md-3">
				 <%= render 'layouts/sidebar_fb' %>	
			</div>

			</div>

				
	</div>
        
</section>