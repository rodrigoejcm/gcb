<div class="thumbnail text-center">
	

    <% if current_usuario.possuiPerfil?%>
         <div class="avatar" style="background-image: url('<%=current_usuario.perfil.imagemPerfil_url.to_s%>');"></div> 
    <% else %>
         <%= image_tag("avatar2.jpg", height: '600', width: '460')%>
    <% end %>    

   

	<h2 class="size-17 margin-top-10 margin-bottom-0">
        <%= current_usuario.apelido if !current_usuario.apelido.nil? %>
    </h2>
    <h3 class="size-13 margin-top-0 margin-bottom-10 text-muted">
        <%= (current_usuario.nome  if !current_usuario.nome.nil?) %>
            <%= " " %>
        <%= (current_usuario.sobrenome  if !current_usuario.sobrenome.nil?) %>
    </h3>
	<h3 class="size-11 margin-top-0 margin-bottom-10 text-muted"><%=current_usuario.graduacao%></h3>
</div>

