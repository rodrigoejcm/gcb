<% if current_usuario.admin? || current_usuario.mestre?  %>

  <h1>Publicações Cadastradas</h1>

<%else %>

  <h1>Minhas Publicações</h1>  

<% end %>

<p id="notice"><%= notice %></p>

<%= link_to new_publicacao_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Nova Publicação
<% end %>



<table class="table table-hover table-striped">
  <thead>
    <tr>
      
      <th>Publicação</th>
      <% if current_usuario.admin? || current_usuario.mestre?%>
        <th>Usuario</th>
      <%end%>
      <th>Image</th>
      <th>Aprovação</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @publicacoes.each do |publicacao| %>
      <tr>
        <td>
          <b><%= publicacao.titulo %></b>
          <br><br>
          <%= publicacao.texto_publicacao.truncate(150) %>
        </td>
        <% if current_usuario.admin? || current_usuario.mestre?%>
          <td><%= publicacao.usuario.apelido %></td>
        <%end%>
        <td><%=image_tag publicacao.image_url.to_s, size: '100'%></td>
        <td><%= publicacao.status_aprovacao %></td>
        <td>
          <%= link_to 'Visualizar', publicacao, class: 'btn btn-primary btn-xs' %><br>
          <%= link_to 'Editat', edit_publicacao_path(publicacao), class: 'btn btn-info btn-xs' %><br>
          <%= link_to 'Excluir', publicacao, method: :delete, data: { confirm: 'Tem certeza que dseja excluir a publicação?'}, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @publicacoes %>
<br>



