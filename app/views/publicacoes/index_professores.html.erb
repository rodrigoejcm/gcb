<h1>Publicações Cadastrados pelos Professores</h1>

<% unless notice.blank? %>
  <p id="notice"><%= notice %></p>
<% end %>



<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th style="width:110px;">Publicação</th>
      <th ></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @publicacoes.each do |publicacao| %>
      <tr>
        <td><%=image_tag publicacao.image_url.to_s, size: '100'%></td>
        <td>
          <b><%= publicacao.titulo %></b>
          <br>

            <i class="fa fa-user" aria-hidden="true"></i>
            <%= publicacao.usuario.apelido %>

          <br>
          <span class="label <%=publicacao.status_aprovacao_cor%>">
            <%= publicacao.status_aprovacao%>
          </span>
          <br>
          <br>
          <%= strip_tags(publicacao.texto_publicacao).truncate(100) %>
        </td>
        <td>
          <br>
          <%= link_to(publicacao) do %>
            <i class="fa fa-file-text-o"></i> Visualizar
          <% end %>

          <br>
          <%= link_to(edit_publicacao_path(publicacao)) do %>
            <i class="fa fa-pencil"></i> Editar 
          <% end %>
          <br>
          <%= link_to(publicacao, method: :delete, data: { confirm: 'Tem certeza que dseja excluir a publicação?' }) do %>
            <i class="fa fa-trash-o"></i> Excluir
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @publicacoes %>
<br>



