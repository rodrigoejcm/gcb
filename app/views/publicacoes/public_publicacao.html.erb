
<section>


		<div class="row">

			<!-- RIGHT -->
			<div class="col-md-9 col-sm-9">

				<div class="row">
					<!-- POST ITEM -->
					<div class="blog-post-item col-md-12 col-sm-12">

						<h2><%= @publicacao.titulo%></h2>

						<!-- IMAGE -->
						<figure class="margin-bottom-20 imagem-publicacoes" style="background-image: url('<%=@publicacao.image_url.to_s%>');">

						</figure>

						

						<ul class="blog-post-info list-inline">
							<li>
								
									<i class="fa fa-clock-o"></i> 
									<span class="font-lato"><%=l @publicacao.created_at, format: :short_sem_hora %></span>
								
							</li>
							<li>
								<i class="fa fa-folder-open-o"></i> 

								<%= link_to( todas_publicacoes_categoria_path( :nomeCategoria =>   @publicacao.categoria.nomeCategoria )) do %>
									<span class="font-lato"><%= @publicacao.categoria.nomeCategoria%></span>
								<% end %>
							</li>
							<li>
								
									<i class="fa fa-user"></i> 
									<span class="font-lato"><%= @publicacao.usuario.apelidoCompleto%></span>
								
							</li>
							<li>
								<div 	class="fb-share-button" 
										data-href="<%=request.original_url%>" 
										data-layout="button" 
										data-mobile-iframe="true">
											<a 
												class="fb-xfbml-parse-ignore" 
												target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">
												Compartilhar
											</a>
								</div>
							</li>
						</ul>

						<p><%=@publicacao.texto_publicacao.html_safe%></p>
						
						
					</div>
					<!-- /POST ITEM -->
				</div>

			</div>
			<!-- LEFT -->
			<div class="col-md-3 col-sm-3">
