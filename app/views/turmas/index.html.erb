
<h1>Minhas Turmas</h1>

<%= link_to new_turma_path, class: 'btn btn-success' do %>
  <i class="fa fa-plus"></i> Cadastrar Nova Turma
<% end %>

<p id="notice"><%= notice %></p>

<table class="table table-hover table-striped">
  <COLGROUP span="2">
  <COLGROUP span="7" style="border: 1px solid #ddd;">
  <COLGROUP span="2">
  <thead>
    
    <tr>
      <th rowspan="2">Turma</th>
      <th rowspan="2"></th>
      <th colspan="7" class="text-center borda-bottom-1px">Dias da semana</th>
      <th class="text-center" rowspan="2">Turma Ativa?</th>
      <th rowspan="2"></th>
    </tr>
    
    <tr>
      <th class="text-center subneader-tabela">seg</th>
      <th class="text-center subneader-tabela">ter</th>
      <th class="text-center subneader-tabela">qua</th>
      <th class="text-center subneader-tabela">qui</th>
      <th class="text-center subneader-tabela">sex</th>
      <th class="text-center subneader-tabela">sab</th>
      <th class="text-center subneader-tabela">dom</th>
    </tr>

  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%=image_tag turma.local.imagem_url.to_s, size: '50'%></td>
        <td>
          <%= turma.local.nome %> <br> <%= l turma.hora_inicio, format: :hora_minuto%> - <%= l turma.hora_fim, format: :hora_minuto %> (<%= turma.periodo%>) <br> <%= turma.publico%> 
        </td>
        <td class="text-center">
          <%if turma.dia_seg? %>
            <br>
            <i class="fa fa-check turma-sim" aria-hidden="true"></i>
          <%end%>
        </td>
        <td class="text-center">
          <%if turma.dia_ter? %>
            <br>
            <i class="fa fa-check turma-sim" aria-hidden="true"></i>
          <%else%>
            <br>
            <i class="fa fa-times turma-nao" aria-hidden="true"></i>
          <%end%>
        </td>
        <td class="text-center"><%if turma.dia_qua? %><br><i class="fa fa-check turma-sim" aria-hidden="true"></i> <%end%></td>
        <td class="text-center"><%if turma.dia_qui? %><br><i class="fa fa-check" aria-hidden="true"></i> <%end%></td>
        <td class="text-center"><%if turma.dia_sex? %><br><i class="fa fa-check" aria-hidden="true"></i> <%end%></td>
        <td class="text-center"><%if turma.dia_sab? %><br><i class="fa fa-check" aria-hidden="true"></i> <%end%></td>
        <td class="text-center"><%if turma.dia_dom? %><br><i class="fa fa-check" aria-hidden="true"></i> <%end%></td>
       
        <td class="text-center">
          <br>
          <%if turma.turma_ativa? %>
          sim
          <%else%>
          n√£o
          <% end %>
        </td>
        <td>
          
          <%= link_to(turma) do %>
            <i class="fa fa-calendar-o"></i> Visualizar
          <% end %>
          <br>
          <%= link_to(edit_turma_path(turma)) do %>
            <i class="fa fa-pencil"></i> Editar
          <% end %>
          <br>
          <%= link_to(turma, method: :delete, data: { confirm: 'Tem certeza que deseja excluir a turma?' }) do %>
            <i class="fa fa-trash-o"></i> Excluir
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @turmas %>

<br>

<%= link_to locais_path, class: 'btn' do %>
  <i class="fa fa-map-marker"></i> Clique aqui para visualizar os seus locais cadastrados.
<% end %>
