<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Descrição Evento</th>
      <th>inicio</th>
      <th>Fim</th>
      <th>Evento Aprovado?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% aprovacao_eventos.each do |evento| %>
      <tr>
        <td><%=image_tag evento.image_url.to_s, size: '100'%></td>
        <td>
          <b><%= evento.titulo %></b>
          <%= evento.descricao.truncate(100) %>
          Local: <%= evento.local %>
        <td>
          <%= evento.data_hora_inicio.to_time.strftime('%d/%m/%Y')%>
          <br>
          <%= evento.data_hora_inicio.to_time.strftime('%H:%m ')%>
        </td>
        <td>
          <%= evento.data_hora_fim.to_time.strftime('%d/%m/%Y')%>
          <br>
          <%= evento.data_hora_fim.to_time.strftime('%H:%m ')%>
        </td>
 
        <td>
          <%= evento.status_aprovacao%>
        </td>
        <td><%= link_to 'Visualizar', evento, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Editar Evento', edit_evento_path(evento) , class: 'btn btn-info btn-xs'%></td>
        <td><%= link_to 'Cancelar Evento', evento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>