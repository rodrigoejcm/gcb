                  <!-- register form -->
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'nomargin sky-form boxed'}) do |f| %>
                      <%= devise_error_messages! %>
                    <header>
                      <i class="fa fa-users"></i> Cadastro
                    </header>


                    <fieldset class="nomargin">     

                    <div class="row">
                      <div class="col-md-6">
                        <div class="field">
                          <label class="input">
                            <%= f.text_field :nome ,placeholder: "Nome" %>
                          </label>
                        </div>
                      </div>
                      <div class="col col-md-6">
                        <div class="field">
                          <label class="input">
                            <%= f.text_field :sobrenome, placeholder: "Sobrenome"%>
                          </label>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-7">
                        <div class="field">
                          <label class="input">
                            <%= f.text_field :apelido ,placeholder: "Apelido" %>
                          </label>
                        </div>
                      </div>
                      <div class="col col-md-5">
                        <div class="field">
                          <label class="input">
                            <%= f.select :sexo, [['Masculino', 'M'], ['Feminino', 'F']] , prompt: "Sexo"%>
                          </label>
                        </div>
                      </div>
                    </div>                           
                    <label class="input">
                      <%= f.select :graduacao, ['Calouro(a)', 'Graduado(a)', 'Instrutor(a)', 'Professor(a)', 'Formando(a)', 'Formado(a)', 'Mestre(a)' ], prompt: "Informe sua graduação" %> 
                    </label>
                    <label class="input">
                      <%= f.select :nome_professor, ['Rodrigo Capoeira', 'Bruno Berimbau', 'Paulinho Sabiá']  %> 
                    </label>

                    <label class="input">
                        <i class="ico-append fa fa-envelope"></i>
                        <%= f.email_field :email, placeholder: "E-mail" %>
                        <b class="tooltip tooltip-bottom-right">Necessário para verificar o cadastro</b>
                    </label>

                     <label class="input">
                        <i class="ico-append fa fa-lock"></i>
                        <% if @minimum_password_length %>
                      
                      <% end %>
                      <%= f.password_field :password, autocomplete: "off", placeholder:"Senha" %>
                    </label>

                    <label class="input">
                        <i class="ico-append fa fa-envelope"></i>
                        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmação de Senha" %>
                    </label>
                 

                    <div class="margin-top-20">
                        <label class="checkbox nomargin"><input class="checked-agree" type="checkbox" name="checkbox"><i></i>Concordo com os termos de serviço.</label>
                        <label class="checkbox nomargin"><input type="checkbox" name="checkbox"><i></i>Gostaria de receber novidade do Grupo Capoeira Brasil.</label>
                      </div>
                  </fieldset>
                    


                    <div class="row margin-bottom-20 actions">
                      <div class="col-md-12">
                         <%= f.submit "Cadastrar", class:'btn btn-primary' %>
                      </div>
                    </div>

                    <%= render "devise/shared/links" %>

                      
                     
                  <%end%>
