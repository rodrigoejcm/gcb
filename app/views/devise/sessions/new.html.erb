<section>
        <div class="container">
          
          <div class="row">

            <div class="col-md-6 col-md-offset-3">

              <!-- ALERT -->
              <!-- <div class="alert alert-mini alert-danger margin-bottom-30">
                <strong>Oh snap!</strong> Login Incorrect!
              </div> --><!-- /ALERT -->

              <div class="box-static box-border-top padding-30">
                <div class="box-title margin-bottom-30">
                  <h2 class="size-20">Entrar</h2>
                </div>

                

                <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'nomargin'}) do |f| %>

                  <div class="clearfix">
                    
                    <!-- Email -->
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'E-mail' %>
                    </div>
                    
                    <!-- Password -->
                    <div class="form-group">
                          <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Senha' %>
                    </div>


                    <% if devise_mapping.rememberable? -%>
                      <div class="form-group"">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                                        
                  </div>
                  
                  <div class="row">
                    
                    <div class="col-md-6 col-sm-6 col-xs-6">
                      
                      <!-- Inform Tip -->                                        
                      
                    </div>
                    
                    <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                      <%= f.submit "Entrar", class:'btn btn-primary' %>
                    </div>
                    
                  </div>
                  
               <%end %>

              </div>
              
              <div class="margin-top-30 text-center">
                <%= render "devise/shared/links" %>             
              </div>

            </div>
          </div>
          
        </div>
      </section>